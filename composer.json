{
  "name": "a9f/lifter",
  "description": "Tool for automating project upgrades using Rector and other tools",
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Andreas Wolf",
      "email": "dev+lifter@a-w.io"
    }
  ],
  "require": {
    "php": "^8.2",
    "symfony/config": "~7.0.0",
    "symfony/console": "~7.0.0",
    "symfony/dependency-injection": "~7.0.0",
    "symfony/process": "~7.0.0",
    "symfony/yaml": "~7.0.0",
    "thecodingmachine/safe": "^2.5"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.42",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^11.0",
    "thecodingmachine/phpstan-safe-rule": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "a9f\\Lifter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "a9f\\Lifter\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/lifter"
  ],
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "scripts": {
    "analyze:php": "phpstan analyze",
    "test:php": "phpunit tests/"
  }
}
